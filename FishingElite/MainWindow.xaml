<Window x:Class="FishingElite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishingElite"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <StackPanel Margin="20">
        <StackPanel>
            <TextBlock TextAlignment="Center" FontSize="36">Авторизация</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock>Электронная почта</TextBlock>
            <TextBox x:Name="tbEmail" Text="misha@gmail.com"></TextBox>
        </StackPanel>
        <StackPanel>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="tbPassword" Password="123"></PasswordBox>
        </StackPanel>
        <StackPanel>
            <Button x:Name="btnAuth" Click="btnAuth_Click">Авторизоваться</Button>
        </StackPanel>
    </StackPanel>
</Window>
